{
    "plugins": [
        "jest"
    ],
    "env": {
        "browser": true,
        "es2021": true,
        "jest/globals": true
    },
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "max-len": ["error", 120],
        "import/prefer-default-export": "off",
        "quotes": ["error", "double", { "avoidEscape": true, "allowTemplateLiterals": true}],
        "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }]
    }
}
